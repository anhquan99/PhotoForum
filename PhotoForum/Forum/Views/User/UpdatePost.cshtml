
@{
    ViewBag.Title = "UpdatePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Forum.Models.POST post = null;
    if (TempData["Post"] != null)
    {
        post = (Forum.Models.POST)TempData["Post"];
    }
}

<h2>UpdatePost</h2>
@if (post != null)
{
<form action="@Url.Action("UpdatePostDB", "User")" method="post">
    <div class="form-group row">
        <input type="hidden" name="ID" class="form-control" id="id" value="@post.ID">
        <input type="hidden" name="LINKED_LINK" class="form-control" id="id" value="@post.LINKED_LINK">
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" name="USERNAME" placeholder="Username" value="@post.USERNAME">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="NAME" placeholder="Image Name" value="@post.NAME">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Caption</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="CAPTION" placeholder="Image Name" value="@post.NAME">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Post Time</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" name="POST_TIME" placeholder="Upload Date" value="@post.POST_TIME">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" name="STATUS" placeholder="Upload Date" value="@post.STATUS">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <input type="submit" class="btn btn-primary" value="save" />
        </div>
    </div>

</form>
}
