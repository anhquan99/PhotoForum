
@{
    ViewBag.Title = "ShowImg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .card-img-top {
            width: 50%;
            height: 15vw;
            object-fit: cover;
        }
    </style>
<h2>Show Photos</h2>
<div class="row">
    <table class="table table-striped w-full">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Upload Date</th>                
                <th scope="col">Img</th>
                <th scope="col">Status</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.PhotoList != null)
            {
                foreach (var item in ViewBag.PhotoList)
                {
                    <tr>
                        <td>@item.IMG_ID</td>
                        <td>@item.USERNAME</td>
                        <td>@item.UPLOAD_DATE</td>
                        <td><img src="@Url.Content("~/img/"+ item.IMG_NAME)" class="card-img-top" alt="..."></td>
                        <td>@item.STATUS</td>
                        <td><a href="@Url.Action("UpdateImg", new { id = item.IMG_ID })">Update</a></td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>

